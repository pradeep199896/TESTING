<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">

    <property name="LOG_HOME" value="log/pull-connector/"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50}:%line - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${LOG_HOME}/udp.log.%d{yyyy-MM-dd}.log</FileNamePattern>
            <MaxHistory>30</MaxHistory>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50}:%line - %msg%n</pattern>
        </encoder>
        <!--    <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">-->
        <!--      <MaxFileSize>10MB</MaxFileSize>-->
        <!--    </triggeringPolicy>-->
    </appender>

    <appender name="SQL" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <append>false</append>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${LOG_HOME}/sql.log.%d{yyyy-MM-dd}.log</FileNamePattern>
            <MaxHistory>30</MaxHistory>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50}:%line - %msg%n</pattern>
        </encoder>
        <!--    <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">-->
        <!--      <MaxFileSize>10MB</MaxFileSize>-->
        <!--    </triggeringPolicy>-->
    </appender>

    <appender name="RSYSLOG" class="ch.qos.logback.classic.net.SyslogAppender">
        <!-- Ubuntu Server host name -->
        <syslogHost>localhost</syslogHost>
        <facility>LOCAL1</facility>
        <suffixPattern>%thread: %-5level %logger{50}:%line - %msg%n</suffixPattern>
    </appender>

    <logger name="org.springframework.context.support.DefaultLifecycleProcessor" level="ERROR"  />
    <logger name="com.zaxxer.hikari.pool.ProxyConnection" level="ERROR"  />
    <logger name="org.springframework.cloud" level="ERROR"  />
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder"  additivity="true" >
        <appender-ref ref="SQL" level="TRACE"/>
    </logger>
    <logger name="org.hibernate.SQL"  additivity="true" >
        <appender-ref ref="SQL" level="DEBUG"/>
    </logger>
    <logger name="org.hibernate.engine" level="info" additivity="true" >
        <appender-ref ref="SQL"/>
    </logger>
    <logger name="com.solace.connector.db.pull.service.DataCollecttingService" additivity="true" >
        <appender-ref ref="SQL" level="TRACE"/>
    </logger>
    <logger name="org.springframework.jdbc.core.JdbcTemplate" additivity="true" >
        <appender-ref ref="SQL" level="TRACE"/>
    </logger>
    <logger name="org.springframework.jdbc.core.StatementCreatorUtils"  additivity="true" >
        <appender-ref ref="SQL" level="TRACE"/>
    </logger>
    <!--DEBUG,INFO,WARN,ERROR,FATAL-->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="RSYSLOG" />
    </root>

</configuration>